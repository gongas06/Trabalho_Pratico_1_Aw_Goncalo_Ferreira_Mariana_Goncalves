generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Adotante {
  id       Int      @id @default(autoincrement())
  nome     String
  telefone String
  email    String   @unique
  adocoes  Adocao[]
}

model Animal {
  id      Int      @id @default(autoincrement())
  nome    String
  especie String
  idade   Int
  adocoes Adocao[]
}

model Adocao {
  id         Int      @id @default(autoincrement())
  data       DateTime @default(now())
  estado     String   @default("pendente")
  adotanteId Int
  animalId   Int

  adotante Adotante @relation(fields: [adotanteId], references: [id])
  animal   Animal   @relation(fields: [animalId], references: [id])
}
